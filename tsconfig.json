{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["@types/gtag.js"],
    "paths": {
      "@variable": ["./src/styles/variable.module.scss"],
      "@web/*": ["./src/app/(web)/*"],
      "@api/*": ["./src/app/api/*"],
      "@icons/*": ["./src/components/icons/*"],
      "@/*": ["./src/*"],
      "/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/common/modal/ChannelCardModal.module.scs"
  ],
  "exclude": ["node_modules", "src/temps", "src/libraries/cloudflare/index.js"]
}
